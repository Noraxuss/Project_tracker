<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project_tracker_frontend.application.controller.LoadingController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="10">
        <Label fx:id="statusLabel" text="Starting up backend..." />
        <ProgressIndicator fx:id="progressIndicator" />
        <Button fx:id="showLogsButton" text="Show Logs" onAction="#onShowLogs" visible="false"/>
        <TextArea fx:id="logArea" editable="false" wrapText="true" visible="false"/>
    </VBox>

</AnchorPane>