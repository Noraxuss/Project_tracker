<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="project_tracker_frontend.application.controller.ProjectViewerController"
            prefHeight="400.0" prefWidth="600.0">

    <GridPane hgap="10" vgap="10" alignment="TOP_CENTER">
        <Label text="%project.name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label fx:id="projectNameField" onMouseClicked="#handleMouseClickOnProjectTitle"
               GridPane.rowIndex="1" GridPane.columnIndex="1" />
        <TextField fx:id="editableProjectNameField" onAction="#handleProjectNameEditAction"
                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="%project.description" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

        <Label fx:id="projectDescriptionField" onMouseClicked="#handleMouseClickOnProjectDescription"
               GridPane.rowIndex="3" GridPane.columnIndex="1" />
        <TextField fx:id="editableProjectDescriptionField" onAction="#handleProjectDescriptionEditAction"
                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>


    </GridPane>


</BorderPane>
